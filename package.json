  "description": "Micro CLI for interactive listing & running npm scripts.",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "bin": {
    "sx": "./bin/sx"
  },
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -cw",
    "lint": "eslint . --ext .js",
