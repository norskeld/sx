  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/arcdelta/x-s/issues"
  },
  "homepage": "https://github.com/arcdelta/x-s#readme",
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@rollup/plugin-babel": "^5.0.0",
